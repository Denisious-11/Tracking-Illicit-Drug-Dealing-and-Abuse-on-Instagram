<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:paddingBottom="10dp"
        card_view:cardBackgroundColor="@color/light_purple"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="18dp">

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p_image"
                    android:layout_marginLeft="80dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/back12"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="0dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/p_text"
                    android:layout_width="360dp"
                    android:text="Caption"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:maxLines="3"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Time : "
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/time"
                    android:layout_width="150dp"
                    android:text="Time"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Date : "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/date"
                    android:layout_width="150dp"
                    android:text="date"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Person Name : "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="150dp"
                    android:text="Person name"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:text="Username : "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="150dp"
                    android:text="Username"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:textStyle="bold"
                    android:text="Phone Number : "
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="150dp"
                    android:text="phone number"
                    android:textSize="16dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:textStyle="bold"
                    android:text="Email_id : "
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/email_id"
                    android:layout_width="240dp"
                    android:text="Email"
                    android:textSize="16dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="135dp"
                    android:textStyle="bold"
                    android:text="Status : "
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="240dp"
                    android:text="Status"
                    android:textSize="16dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/p_id"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/encoded_image"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:layout_height="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Take Action"
                    android:background="@drawable/rounded_signup"
                    android:textColor="@color/white"
                    android:id="@+id/take_action"
                    android:layout_marginBottom="3dp"></androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>